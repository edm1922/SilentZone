{
  "manifest_version": 3,
  "name": "SilentZone",
  "version": "0.1.0",
  "description": "Filter the web, your way. Mute keywords and topics across platforms.",
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["scripts/direct-auth-helper.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"],
      "css": ["styles/content.css"],
      "run_at": "document_idle"
    }
  ]
}
